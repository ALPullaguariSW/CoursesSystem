export const prerender = false;

import { eliminarEstudiante } from "../../../services/studentService";
import { Astro } from '@astro/types';

const { id } = Astro.params;

try {
  // Intentar eliminar el estudiante
  await eliminarEstudiante(id);

  // Redirigir a la lista de estudiantes despuÃ©s de eliminar
  return Astro.redirect('/estudiantes');
} catch (error) {
  console.error("Error al eliminar estudiante:", error);
  // Redirigir aunque haya ocurrido un error
  return Astro.redirect('/estudiantes');
}
